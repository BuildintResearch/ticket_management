    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Register Ticket</title>
</head>

<body onload="issue_page(),getImage()">

    <nav id="nav-bar-top" class="navbar navbar-expand-lg navbar-light bg-light mb-3">
        <a class="navbar-brand" href="#">Ticket Management</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active">
              <a class="nav-link" href="/">Overview</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/mytickets">My Tickets</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/issues"><b>Issues</b></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/checklist/survey_service">iATM Checklist</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/checklist/testing">iATM Testing</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/checklist/branch_c">Branch Checklist</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/history">History</a>
            </li>
            <% if(user_type=='Super Admin'){ %>
              <li class="nav-item">
                <a class="nav-link" href="/adduser">Add Users</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/addproject">Add Projects</a>
              </li>
              <% } %>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
    </nav>
    </div>
  
    <div class="container" id="issue-main-div" style="margin-top: 25px;">
      <div id="issue-box">
        <div class="row">
          <div class="col-12" style="text-align: center; padding: 25px;">
            <h4 hidden id="tkid"><%= data[0]['tkid'] %></h4>
            <h4><%= data[0]['subject'] %></h4>
          </div>
        </div>
        <div class="row" style="text-align: center; font-size: 20px;">
          <div class="col-6">
            <p><b>Project : </b><%= data[0]['project'] %></p>
          </div>
          <div class="col-6">
            <p><b>City : </b><%= data[0]['city'] %></p>
          </div>
          <div class="col-6">
            <p><b>Location : </b><%= data[0]['location'] %></p>
          </div>
          <div class="col-6">
            <p><b>Type : </b><%= data[0]['type'] %></p>
          </div>
        </div>
        <div class="row" style="text-align: center; font-size: 20px;">
          <div class="col-6">
            <p><b>Status : </b><%= data[0]['status'] %></p>
          </div>
          <div class="col-6">
            <p><b>Assignee : </b><% for(i=0;i<users.length-1;i++){ %>
              <% if(data[0]['assignee'].includes(users[i]['user_id'])){ %>
                <%= users[i]['fname'] %> <%= users[i]['lname'] %>;
              <% } %>
              <% } %>
            </p>
          </div>
          
        </div>
      
        <div class="row" style="text-align: center; font-size: 20px;">
          <div class="col-6">
            <p><b>Description : </b><%= data[0]['description'] %></p>
            <p><b>Created Time : </b><%= data[0]['created_at'] %></p>
          </div>
          <div class="col-6">
            <% if(!data[0]['solved']) {%>
              <form action="/update/<%= data[0]['tkid'] %>/solved">
                <button type="submit" class="btn btn-primary">Mark as solved</button>
              </form>
              <% if(data[0]['type']=='ATM'){ %>
                <a href="/checklist/survey_service"><button class="btn btn-primary mt-1">Fill Checklist</button></a>
              <% } %>
              <% if(data[0]['type']=='Branch'){ %>
                <a href="/checklist/branch_c"><button class="btn btn-primary mt-1">Fill Checklist</button></a>
              <% } %>
              <% if(data[0]['type']=='Software'){ %>
                <a href="/checklist/software_c"><button class="btn btn-primary mt-1">Fill Checklist</button></a>
              <% } %>
            <% }else{ %>
              <form action="/update/<%= data[0]['tkid'] %>/reopen">
                <button type="submit" class="btn btn-primary">Reopen</button>
              </form>
            <% } %>
          </div>
          
          <% if(data[0]['attachments'] != 'none'){ %>
          <div class="row" style="text-align: left; font-size: 20px;">
            <div class="col-12">
              <p><b>Images : </b></p>
              <div id="img-container">
                <!-- generate images here -->
              </div>
            </div>
          </div>
          <%}%>
          <!-- View Images here -->
          <!-- Retrieve from FTP Server -->
        <!-- <p><b>Files : </b></p> Files Here !!! -->
      </div>
    </div>
    <hr>
    <% for(var i=0; i<=followup.length-1; i++) { %>
      <div id="followup<%= followup[i]['tkid'] %>" class="container" style="border: 1px solid; border-radius: 10px; margin-top: 10px;padding: 10px;">
        <% for(j=0; j < users.length; j++){ %>
          <% if(followup[i]['user_id'] == users[j]['user_id']){ %>
            <p style="color: gray;"><b><%= users[j]['fname'] %> <%= users[j]['lname'] %> :</b></p>
            <% } %>
        <% } %>
        <p><%= followup[i]['description'] %></p>
        <p><%= followup[i]['created_at'].toISOString().replace("T"," ").substring(0, 19) %></p>
        <% if(data[0]['attachments'] != 'none'){%>
        <p>Images : </p>
        <div>
          <p id="followup_img_<%= i %>"><%= followup[i]['attachments'] %></p>
        </div>
        <% } %>
      </div>
      
    <% } %>
    <form enctype="multipart/form-data" action="/posturl/comment" method="post">
    <div class="container" id="issue-comment-div" style="margin-top: 10px;">
      <div class="form-group">
        <% if(data[0]['solved']){ %>
        <textarea name="description" class="form-control" id="formcomment" rows="3" hidden></textarea>
        <button style="margin-top: 10px;" class="btn btn-primary" hidden>Add</button>
        <% } else{%>
          <label for="formcomment">Add Comment</label>
          <input id="tkid" name='tkid' type="text" value=<%= data[0]['tkid'] %> hidden>
          <textarea name="description" class="form-control" id="formcomment" rows="3"></textarea>
          <input name="file_input" type="file" class="form-control" id="file_input" multiple="multiple">
          <button style="margin-top: 10px;" class="btn btn-primary">Add</button>
          <% } %>
      </div>
    </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>    <script type="text/javascript" src="/js/script.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>