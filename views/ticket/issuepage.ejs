    <div class="container" id="issue-main-div" style="margin-top: 25px;">
      <div id="issue-box">
        <div class="row">
          <div class="col-12" style="text-align: center; padding: 25px;">
            <h4 hidden id="tkid"><%= data[0]['tkid'] %></h4>
            <h4><%= data[0]['subject'] %></h4>
          </div>
        </div>
        <div class="row" style="text-align: center; font-size: 20px;">
          <div class="col-6">
            <p><b>Project : </b><%= data[0]['project'] %></p>
          </div>
          <div class="col-6">
            <p><b>City : </b><%= data[0]['city'] %></p>
          </div>
          <div class="col-6">
            <p><b>Location : </b><%= data[0]['location'] %></p>
          </div>
          <div class="col-6">
            <p><b>Type : </b><%= project[0]['project_type'] %></p>
          </div>
        </div>
        <div class="row" style="text-align: center; font-size: 20px;">
          <div class="col-6">
            <p><b>Status : </b><%= data[0]['status'] %></p>
          </div>
          <div class="col-6">
            <p><b>Assignee : </b><% for(i=0;i<users.length-1;i++){ %>
              <% if(data[0]['assignee'].includes(users[i]['user_id'])){ %>
                <%= users[i]['fname'] %> <%= users[i]['lname'] %>;
              <% } %>
              <% } %>
            </p>
          </div>
          
        </div>
      
        <div class="row" style="text-align: center; font-size: 20px;">
          <div class="col-6">
            <p><b>Description : </b><%= data[0]['description'] %></p>
            <p><b>Created Time : </b><%= data[0]['created_at'] %></p>
          </div>
          <div class="col-6">
            <% if(!data[0]['solved']) {%>
              <form action="/update/<%= data[0]['tkid'] %>/solved">
                <button type="submit" class="btn btn-primary">Mark as solved</button>
              </form>
              <!-- Modal -->
              <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLongTitle">Assignees</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    
                    <!-- <form enctype="multipart/form-data" action="/updateassignee/<%= data[0]['tkid'] %>" method="post"> -->
                      <form enctype="application/x-www-form-urlencoded" name="assignee_data" action="/updateassignee/<%= data[0]['tkid'] %>" method="POST" id="sub_ticket">
                      <div class="modal-body">
                        <div class="mb-3">
                          <!-- <input type="text" name="test"> -->
                          <label for="p_list" class="form-label">Assignee</label>
                          <select id="p_list" name="list_assignee" class="form-select" size="5" aria-label="size 3 select example" multiple>
                            <!-- list of assignees -->
                          </select>
                          <input class="form-control mt-3" name="description" placeholder="Enter Description" type="text">
                        </div>
                      </div>
                      <div class="modal-footer">
                        <!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> -->
                        <button type="submit" class="btn btn-primary">Save changes</button>
                      </div>
                    </form>

                  </div>
                </div>
              </div>
              <!-- Modal -->
              <% if(data[0]['ticket_role']=='1'){ %>
                <button type="button" class="btn btn-primary mt-1" id="change_assignee" data-toggle="modal" data-target="#exampleModalCenter">Assign</button>
              <% } %>
              <% if(data[0]['ticket_type']=='project'){ %>
                <% if(project[0]['category']=='POC' && project[0]['project_type']=='atm' && data[0]['subject'].includes("Survey")){ %>
                <a href="/checklist/survey_service/<%= data[0]['tkid']%>/<%= project[0]['project_id']%>/<%= data[0]['status'] %>"><button class="btn btn-primary mt-1">Fill Checklist</button></a>
              <% } %>
              <% if(project[0]['category']=='POC' && project[0]['project_type']=='atm' && data[0]['subject'].includes("Installation")){ %>
                <a href="/checklist/survey_service/<%= data[0]['tkid']%>/<%= project[0]['project_id']%>/<%= data[0]['status'] %>"><button class="btn btn-primary mt-1">Fill Checklist</button></a>
              <% } %>
              <% if(project[0]['category']=='POC' && project[0]['project_type']=='atm' && data[0]['subject'].includes("Dashboard")){ %>
                <a href="/checklist/software_c/<%= data[0]['tkid']%>/<%= project[0]['project_id']%>/<%= data[0]['status'] %>"><button class="btn btn-primary mt-1">Fill Checklist</button></a>
              <% } %>
                <% if(project[0]['category']=='POC' && project[0]['project_type'].includes('branch')){ %>
                <a href="/checklist/branch_c/<%= data[0]['tkid']%>/<%= project[0]['project_id']%>/<%= data[0]['status'] %>"><button class="btn btn-primary mt-1">Fill Checklist</button></a>
              <% } %>
                <% if(project[0]['category']=='Live' && project[0]['project_type']=='atm'){ %>
                <a href="/checklist/survey_service/<%= data[0]['tkid']%>/<%= project[0]['project_id']%>/<%= data[0]['status'] %>"><button class="btn btn-primary mt-1">Fill Checklist</button></a>
              <% } %>
                <% if(project[0]['category']=='Live' && project[0]['project_type']=='branch'){%> 
                <a href="/checklist/branch_c/<%= data[0]['tkid']%>/<%= project[0]['project_id']%>/<%= data[0]['status'] %>"><button class="btn btn-primary mt-1">Fill Checklist</button></a>
              <% } %>
                  <% if(tkt_ref.length!=0){ %>
                    <br>
                    <% for(i=0;i<tkt_ref.length;i++){ %>
                    <a href="/issuepage/<%= tkt_ref[i]['tkid'] %>">Subticket-<%=i+1%></a>
                    <% } %>
                  <% } %>      
              <% } %>
            <% }else{ %>
              <form action="/update/<%= data[0]['tkid'] %>/reopen">
                <button type="submit" class="btn btn-primary">Reopen</button>
              </form>
            <% } %>
          </div>
          
          
          <div class="row" style="text-align: left; font-size: 20px;">
            <div class="col-12">
              <% if(data[0]['attachments'] != 'na'){ %>
              <p><b>Images : </b></p>
              <%}%>
              <div id="img-container">
                <!-- generate images here -->
              </div>
            </div>
          </div>
          
          <!-- View Images here -->
          <!-- Retrieve from FTP Server -->
        <!-- <p><b>Files : </b></p> Files Here !!! -->
      </div>
    </div>
    <hr>
    <% for(var i=0; i<=followup.length-1; i++) { %>
      <div id="followup<%= followup[i]['tkid'] %>" class="container" style="border: 1px solid; border-radius: 10px; margin-top: 10px;padding: 10px;">
        <% for(j=0; j < users.length; j++){ %>
          <% if(followup[i]['user_id'] == users[j]['user_id']){ %>
            <b style="color: gray;"><%= users[j]['fname'] %> <%= users[j]['lname'] %> :</b>
            <% } %>
        <% } %>
        <%= followup[i]['description'] %>
        <hr width="100%" style="margin: 1;">
        <% if(data[0]['attachments'] != 'none'){%>
        <!-- <p>Images : </p> -->
        <div>
          <p id="followup_img_<%= i %>"><%= followup[i]['attachments'] %></p>
        </div>
        <% } %>
        <%= followup[i]['created_at'].toISOString().replace("T"," ").substring(0, 19) %>
      </div>
      
    <% } %>
    <form enctype="multipart/form-data" action="/posturl/comment" method="post">
    <div class="container" id="issue-comment-div" style="margin-top: 10px;">
      <div class="form-group">
        <% if(data[0]['solved']){ %>
        <textarea name="description" class="form-control" id="formcomment" rows="3" hidden></textarea>
        <button style="margin-top: 10px;" class="btn btn-primary" hidden>Add</button>
        <% } else{%>
          <label for="formcomment">Add Comment</label>
          <input id="tkid" name='tkid' type="text" value=<%= data[0]['tkid'] %> hidden>
          <textarea name="description" class="form-control" id="formcomment" rows="3"></textarea>
          <input name="file_input" type="file" class="form-control" id="file_input" multiple="multiple">
          <button style="margin-top: 10px;" class="btn btn-primary">Add</button>
          <% } %>
      </div>
    </form>
    </div>
