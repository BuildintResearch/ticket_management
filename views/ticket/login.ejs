<!doctype html>
<html>
<head>
    <title>iTicket Login</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body{ padding-top:80px;}
    </style>
</head>
<body>
<div class="container">
    <div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Login</h1><br>

    
    <!-- LOGIN FORM -->
    <form action="/loginpost" method="POST">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email" id="mailid">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="pass">
        </div>
        <button type="submit" class="btn btn-primary btn-lg" onclick="getuid()">Login</button>
    </form>
    <hr>
    <div class="text-center">
        <p>by BuildINT</p>
        <p>for <a href="http://buildint.co">BuildINT</a></p>
    </div>

</div>
</div>

<script>
    async function getuid(){
        var mail = document.getElementById("mailid").value
        console.log(mail)
        await fetch("/getdata/users/usermail/"+mail)
        .then(response => response.json())
        .then(data => {
            let uid = data[0]['user_id']
            localStorage.setItem("uid", uid)
            console.log(uid)
        })

    }
</script>
</body>
</html>