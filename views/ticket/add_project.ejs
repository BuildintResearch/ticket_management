        <!-- <button class="btn btn-primary"><i class="fa fa-plus"></i></button> -->
    <div id="add-project">
    <div class="accordion" id="ticket_window">
        <div class="accordion-item">
          <h2 class="accordion-header" id="ticket_head">
            <!-- data-bs-toggle="collapse" -->
            <button class="accordion-button" type="button" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
              <a href="issues"><i class="fa fa-arrow-left" style="font-size: 20px;"></i></a> <span>Add Project</span>
            </button>
          </h2>
          <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                <form action="/posturl/addproject" method="POST">
                    <div class="mb-3">
                        <label for="pname" class="form-label">Project Name</label>
                        <input name="project_name" class="form-control" id="pname">
                    </div>

                    <div class="mb-3">
                      <label for="pname" class="form-label">Project Status</label>
                      <select class="form-select" name="category" id="">
                        <option value="POC" selected>POC</option>
                        <option value="Live">Live</option>
                      </select>
                    </div>
                  
                    <div class="mb-3">
                      <label for="projecttype" class="form-label">Location Type</label>
                      <!-- <input name="project_type" class="form-control" id="locationname"> -->
                      <select class="form-select" name="project_type" id="">
                        <option value="ATM" selected>ATM</option>
                        <option value="Branch">Branch</option>
                      </select>
                    </div>

                    <div class="mb-3">
                      <label for="cityname" class="form-label">City</label>
                      <input name="city_name" class="form-control" id="locationname">
                    </div>

                    <div class="mb-3">
                      <label for="locationname" class="form-label">Location</label>
                      <input name="location_name" class="form-control" id="locationname">
                    </div>

                    <div class="mb-3">
                      <label for="locationname" class="form-label">Complete Address</label>
                      <input name="complete_address" class="form-control" id="locationname">
                    </div>

                    <button type="submit" class="btn btn-primary">Add Project</button>
                    <% if(message){ %>
                    <div class="alert alert-success" style="margin-top: 10px;" role="alert">
                      <h4 class="alert-heading">Project Added!</h4>
                      <p>Name : <%= message['project_name'] %> <br> Location : <%= message['location_name'] %></p>
                      <hr>
                      <p class="mb-0">Ticket raised to concerned team.</p>
                    </div>
                    <% } %>
            </div>
          </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
