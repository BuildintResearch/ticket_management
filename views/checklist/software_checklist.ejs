    <!-- ======= Home Section ======= -->
    <section class="section">
      <div class="container">

        <div class ="row" id="main-row">
          <div class="col">
            <div style="border: 0px;" class="card">
              <div class="checklist-box">
                <div class="checklist-snip">
                  <div style="width: 30%; float:right; display: none;" class="img-logo-snip">
                    <img src="assets/img/logo.png" alt="" class="img-fluid">
                  </div>
                  <input id="tab-1" type="radio" name="tab" class="atm" checked><label for="tab-1" id="tab1" class="tab atm_tab">Software</label>
                  <input id="tab-2" type="radio" name="tab" class="branch"><label for="tab-2" id="tab2" class="tab branch_tab">Checklist#</label>
                  <div class="checklist-space">
                    <form enctype="multipart/form-data" action="/checklist/postdata/software" method="post">
                      <div class="atm-form">
                        <div class="row">
                          <div class="col-12">
                            <div class="group">
                                <label for="dateTime" class="label">Date and Time</label>
                                <input name="currdate" for="dateTime" class="form-control" type="text" id="datetime" placeholder="Select Date"/>
                              <script type="text/javascript">
                                var dateNow = new Date();
                                $('#datetime').datetimepicker({
                                    format: 'DD-MM-YYYY HH:mm',
                                    sideBySide:true,
                                    useCurrent: true,
                                    locale: 'en',
                                    defaultDate: dateNow
                                });
                      
                              </script>
                            </div>
                          </div>
                          <div class="col-6">
                            <div class="group">
                              <label for="project-name" class="label">Project</label>
                              <input name="project" for="project-name" id="project_name_dd" type="text" class="input" placeholder="Project Name">
                            </div>
                        </div>
                          <div class="col-6">
                              <div class="group">
                                <label for="atm-city" class="label">City</label>
                                <input name="city" for="atm-city" id="atm_city_dropdown" type="text" class="input" placeholder="ATM City">
                              </div>
                          </div>

                          <div class="col-6">
                            <div class="group">
                              <label for="atm_id_dropdown" class="label">Code</label>
                              <input name="code" for="atm-code" id="atm_id_dropdown" type="text" class="input" placeholder="Branch Code/ATM Code">
                            </div>
                          </div>
                          
                          
                        
                          <div class="col-6 form-dropdown">
                            <div class="group">
                              <label for="note">Note</label>
                              <input name="note" style="padding: 0 20px 0 20px"  for="atm-code" id="atm_note" type="text" class="input" placeholder="Note">
                            </div>
                          </div>
                            
                          <div class="col-12">
                            <div class="group">
                              <input type="checkbox" value="Submitted" id="checklist_check" name="checklist_check">
                              <label for="checklist_check">Checklist</label>
                              <input name="chk_com" class="m-1" type="text" placeholder="comments"><br>

                              <input class="mt-3" type="checkbox" value="Submitted" id="dashboard_check" name="dashboard_creation">
                              <label for="dashboard_check">Dashboard</label>
                              <input name="dash_com" class="m-1" type="text" placeholder="comments"><br>

                              <input class="mt-3" type="checkbox" value="Submitted" id="data_check" name="data_integrity">
                              <label for="data_check">Data Integrity</label>
                              <input name="data_com" class="m-1" type="text" placeholder="comments"><br>
                              
                            </div>
                          </div>

                          <div class="group">
                            <input onclick="reset()" style="margin: auto; width: 50%;" type="reset" class="button" value="Clear Form" checked>
                          </div>
                          <div class="group">
                            <input type="submit" class="button" value="Submit">
                          </div>
                        </div>
                      </div>
                      </form>


